@model ECOMMERCE_MVC.Models.Item;
@{
    ViewData["Title"] = "ItemView";
    ViewData["Name"] = @ViewBag.Name;
    ViewData["IsLogged"] = @ViewBag.IsLogged;
}
<body>
    <br/><br/><br/>
    <div class="row">
      

        <div class='col-5'>
          
           
            <img src="@Model.ImageLink" width="400px" alt = "image" onerror="http://tachkent.fr/wp-content/uploads/2013/03/port_item.jpg"/>

        </div>
        <div class='col-6' style="word-break: break-word;">
            <p class="product_name">@Model.Name</p>
            <p><span class="price_title1">Price: </span><span class="price_amount">Rs.@Model.Price</span><span style="color:black;font-size: 1.255rem;"> + </span><span class="price_title1"> Free Shipping<t /> </span></p>
            <p class="about_title">About this item </p>
            <p class="description"> @Model.Description</p>
            <input hidden value="@Model.ItemId">
            <a class="btn btn-info" asp-controller="Cart"  asp-action="AddToCart" asp-route-Id="@Model.ItemId"> <i class="fas fa-cart-plus"> Add To Cart</i> </a>


        </div>



    </div>
</body>
@section Scripts{

