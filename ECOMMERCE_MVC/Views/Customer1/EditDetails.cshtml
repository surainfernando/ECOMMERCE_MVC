


@model ECOMMERCE_MVC.Models.Customer;
@{
    ViewData["Title"] = "View Profile";
}

<form method="post" asp-action="Register">
    <br>
    <div class="border p-3">

        <div class="form-group row">
            <h1 style="text-align: center;">Profile Details</h1>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        : <label>@Model.Name</label>

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-8">
                        : <label>@Model.Address</label>

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-8">
                        : <label>@Model.Email</label>

                    </div>

                </div>




                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <a asp-controller="Customer1" asp-action="EditProfile" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i> Edit Profile</a>
                        </div>
                        <div class="col">
                            <a asp-controller="Customer1" asp-action="EditPassword" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i> Change password</a>
                        </div>

                    </div>
                </div>
                <div class="form-group row">


                </div>
                </div>
            </div>
        <div class="col-4">
            @* Keep this empty *@

        </div>
    </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



