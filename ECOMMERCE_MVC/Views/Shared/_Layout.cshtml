<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECOMMERCE_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap4.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/cartui.css" />
    <link rel="stylesheet" href="~/css/ViewDetails3.css" />
    <link rel="stylesheet" href="~/fontawsome/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ECOMMERCE_MVC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="navbar-brand">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (String.Equals(ViewData["IsLogged"], "true"))
                        {
                            <li class="navbar-brand" style=" position: absolute !important; right: 400px;">
                                <a class="nav-link" asp-area="" asp-controller="Customer1" asp-action="Index"><i class="fa fa-user"></i> Profile</a>
                            </li>

                        }
                        else
                        {
                    <li class="navbar-brand" style=" position: absolute !important; right: 400px;">
                        <a class="nav-link" asp-area="" asp-controller="Customer1" asp-action="Index"> Sign In</a>
                    </li>
                        }



                        @if (String.Equals(ViewData["IsLogged"], "true"))
                        {
                            <li class="navbar-brand" style=" position: absolute !important; right: 280px;">
                                <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index"><i class="fas fa-cart-plus"></i> Cart</a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ECOMMERCE_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
