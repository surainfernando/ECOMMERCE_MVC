@model List<ECOMMERCE_MVC.Models.Item>
    @{
        ViewData["Title"] = "Index";
    }

    <h1>Details of items to be sold</h1>
    <h2>@ViewBag.Name</h2>
    <h2>@ViewBag.FName</h2>

    <a asp-controller="Item1" asp-action="AddItem" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Add New Item For Selling</a>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    Create New Category
                </a>
            </div>
        </div>

        <br /><br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                             Name
                        </th>
                        <th  style="word-break:break-all;">Description</th>
                        <th>Category</th>

                        <th>Price</th>
                        <th>Image</th>
                        <th>Options</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                    <tr>
                        <td>@obj.Name</td>
                        <td  style="word-break:break-all;">@obj.Description</td>
                        <td>@obj.CategoryText</td>
                        <td>@obj.Price</td>
                        <td><img src="@obj.ImageLink" width="100px" ></td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Item1" asp-route-Id="@obj.ItemId" asp-action="EditItem" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit">Edit</i>
                                </a>

                                <a asp-controller="Item1" asp-route-Id="@obj.ItemId" asp-action="EditItem" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt">Delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> No category exists.</p>
        }

    </div>
