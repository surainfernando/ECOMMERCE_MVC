            if (r == true) {
                window.location.href = '@Url.Action("DeleteItem", "Item1")/'+id;
            } else {

            }

        }
        function show() {
            var x = document.getElementById("id1").value;
            var r = confirm("Are you sure that you want to delete this item?"+x);
        }
        function storeData() {
            var x = document.getElementById("id1").value;
            var r = confirm("Are you sure that you want to delete this item?" + x);
        }

    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
